-- Ce script affiche un message d'alerte à l'exécution
local StarterGui = game:GetService("StarterGui")

-- Option 1 : Notification système (plus discret)
StarterGui:SetCore("SendNotification", {
    Title = "Mise à jour !";
    Text = "Update: look in Discord for the new script.";
    Duration = 10;
})

-- Option 2 : Message dans le Chat
local function announceInChat()
    game.StarterGui:SetCore("ChatMakeSystemMessage", {
        Text = "[SYSTEM] : Update available! Check the Discord server.";
        Color = Color3.fromRGB(255, 0, 0); -- Rouge pour attirer l'oeil
        Font = Enum.Font.SourceSansBold;
        FontSize = Enum.FontSize.Size24;
    })
end

announceInChat()
print("Script executed: check Discord for updates.")
